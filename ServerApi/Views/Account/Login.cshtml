@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<h2>Login</h2>

<form asp-action="Login" asp-controller="Authentication" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@returnUrl" />
    <div>
        <label>Email</label>
        <input name="email" type="email" required />
    </div>
    <div>
        <label>Password</label>
        <input name="password" type="password" required />
    </div>
    <button type="submit">Sign in</button>
</form>

<p>
    Don’t have an account?
    <a asp-action="Authentication/Register" asp-route-returnUrl="@returnUrl">Create one</a>
</p>

<hr />

<form action="/Authentication/External/Google" method="get">
    @Html.AntiForgeryToken()
    <input type="hidden" name="provider" value="Google" />
    <input type="hidden" name="returnUrl" value="@returnUrl" />
    <button type="submit">Continue with Google</button>
</form>

<form action="/Authentication/External/LinkedIn" method="get">
    @Html.AntiForgeryToken()
    <input type="hidden" name="provider" value="LinkedIn" />
    <input type="hidden" name="returnUrl" value="@returnUrl" />
    <button type="submit">Continue with LinkedIn</button>
</form>
